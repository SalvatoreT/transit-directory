---
interface Props {
  title?: string;
  description?: string;
  logo?: string;
}

const {
  title = "Transit Directory",
  description = "Real-time transit information for agencies.",
  logo = "/favicon.svg",
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={Astro.url} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:logo" content={new URL(logo, Astro.url)} />
  </head>
  <body>
    <div id="content-wrapper">
      <slot />
    </div>
    <footer>
      Made with ❤️ in Oakland, CA <span class="separator">|</span>
      <a href="https://bsky.app/profile/sal.dev">@sal.dev</a>
      <span class="separator">|</span>
      <a href="https://github.com/SalvatoreT/transit-directory">Source</a>
    </footer>
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
  }

  body {
    display: flex;
    flex-direction: column;
  }

  #content-wrapper {
    flex: 1;
    width: 100%;
  }

  footer {
    text-align: center;
    padding: 0.5rem;
    font-size: 0.75rem;
    color: #666;
    background-color: #f9f9f9;
    border-top: 1px solid #eaeaea;
    font-family: system-ui, sans-serif;
  }

  footer a {
    color: inherit;
    text-decoration: underline;
  }

  .separator {
    margin: 0 0.25rem;
    color: #ccc;
  }
</style>
