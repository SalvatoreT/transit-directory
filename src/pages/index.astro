---
export const prerender = false;
Astro.response.headers.set(
  "Cache-Control",
  "public, max-age=300, s-maxage=3600",
);

import Layout from "../layouts/Layout.astro";
import { getLiveCollection } from "astro:content";

const { entries: agenciesEntries, error } = await getLiveCollection("agencies");
if (error) {
  console.error("Error fetching agencies:", error);
}
const agencies = (agenciesEntries || []).map((entry) => entry.data);
---

<Layout
  title="Transit Directory"
  description="Browse transit agencies and view real-time information."
>
  <main>
    <h1>Transit Agencies</h1>
    <ul class="agency-list">
      {
        agencies.map((agency) => (
          <li>
            <a href={`/a/${agency.agency_id}`}>{agency.agency_name}</a>
          </li>
        ))
      }
    </ul>
    {
      agencies.length === 0 && (
        <p>No active agencies found. Please check back later.</p>
      )
    }
  </main>
</Layout>

<style>
  main {
    max-width: 800px;
    margin: 0 auto;
    padding: 2rem;
    font-family: system-ui, sans-serif;
  }

  h1 {
    font-size: 2.5rem;
    margin-bottom: 2rem;
  }

  .agency-list {
    list-style: none;
    padding: 0;
    display: grid;
    gap: 1rem;
  }

  .agency-list li {
    background: #fff;
    border: 1px solid #ddd;
    border-radius: 8px;
    transition:
      transform 0.2s,
      box-shadow 0.2s;
  }

  .agency-list li:hover {
    transform: translateY(-2px);
    box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
  }

  .agency-list a {
    display: block;
    padding: 1.5rem;
    text-decoration: none;
    color: #111827;
    font-weight: 500;
    font-size: 1.1rem;
  }

  .agency-list a:hover {
    color: #3245ff;
  }
</style>
